   "source": [
    "n = int(input(\"Ingrese un número: \"))\n",
    "\n",
    "k = 0\n",
    "potencia = 2 ** k\n",
    "\n",
    "while potencia <= n:\n",
    "    if potencia == n:\n",
    "        print(f\"{n} PUEDE ser expresado como 2^{k}=\",n)\n",
    "        break\n",
    "    k += 1\n",
    "    potencia = 2 ** k\n",
    "else:\n",
    "    print(f\"{n} NO puede ser expresado como 2^K=\",n)"
   ]
  }
